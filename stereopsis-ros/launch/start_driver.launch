<launch>
    <arg name="video_device" default="/dev/video4"/>
    <arg name="width" default="2560"/>
    <arg name="height" default="720"/>
    <arg name="display" default="false" />
    <arg name="split" default="false" />
    <arg name="rotate" default="false" />

    <node name="stereo_driver_node" pkg="usb_cam" type="usb_cam_node" output="screen" >
        <param name="video_device" value="$(arg video_device)"/>
        <param name="image_width" value="$(arg width)" />
        <param name="image_height" value="$(arg height)" />
        <param name="pixel_format" value="mjpeg" />
        <!--<param name="camera_frame_id" value="stereo_camera" />-->
    </node>

    <include file="$(find pico_flexx_driver)/launch/pico_flexx_driver.launch" />


    <group if="$(arg rotate)">
        <node name="stereo_rotator_node" pkg="image_rotate" type="image_rotate" output="screen" >
            <remap from="image" to="stereo_driver_node/image_raw"/>
            <remap from="rotate/image" to="image_rotated"/>
            <!--<param name="output_frame_id" value="/image_rotated/"/>-->
        </node>
    </group>

    <group if="$(arg split)">
        <node name="stereo_splitter_node" pkg="stereo_driver" type="stereo_splitter_node" output="screen">
            <param name="input_image_topic" value="/stereo_driver_node/image_raw/"/>
        </node>
    </group>



    <group if="$(arg display)">
        <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen" unless="$(arg split)">
            <remap from="image" to="/usb_cam/image_raw"/>
            <param name="autosize" value="true" />
            <param name="filename_format" value="/home/cenkt/projektarbeit/data/images_out/frame%04i.jpg"/>
        </node>
    </group>

</launch>
